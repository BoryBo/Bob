{
  "compileOnSave": false,

  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "baseUrl": "src",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "target": "es5",
    "typeRoots": ["node_modules/@types", "type-definition"],
    "lib": ["es2017", "dom"]
  },

  "include": ["../node_modules/@wtw/**/*", "**/*"]
}
